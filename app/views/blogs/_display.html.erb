<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.first_name %></td>
        <td><%= blog.last_name %></td>
        <td><%= blog.age %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
       <% end %>

  </tbody>
</table>
